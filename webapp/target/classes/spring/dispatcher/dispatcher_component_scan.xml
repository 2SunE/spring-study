<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- DispatcherServlet WebApplicationContext 설정 파일 -->
	
	<!-- Annotation을 사용할 수 있도록 설정 -->
	<mvc:annotation-driven /> 
	
	<!-- IoC컨테이너가 관리해야할 객체를 찾는 설정 base-package="" 어떤 패키지를 기준으로 아래쪽에 있는 것을 찾아서 관리하겠다 -->
	<context:component-scan 
		base-package="com.mycompany.webapp" 
		use-default-filters="true">
		<!-- @Service, @Repository annotation을 제외시킨다. (객체로 만들지 않음) -->
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>	 
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
	</context:component-scan>
	
	<!-- View 이름을 해석하는 역할을 하는 객체다, View 이름을 JSP로 연결(매핑) 시켜주는 객체 -->
	<!-- Controller의 요청 매핑 메소드의 리턴값을 내부 리소스(JSP) 경로로 해석 -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="order" value="1" />
		<property name="prefix" value="/WEB-INF/views/"/> <!-- 접두사 -->
		<property name="suffix" value=".jsp"/> <!-- 접미사 -->
	</bean>

	<!-- DispatcherServlet 실행이 필요없는 resources 경로 설정 -->
	<!-- MVC와 무관한 Resource URL 매핑 (*.css, *.js, *.jpg, *.png) -->
	<mvc:resources location="/resources/" mapping="/resources/**"></mvc:resources>
</beans>
